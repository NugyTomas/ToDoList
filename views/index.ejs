<%- include("partials/header.ejs") %>

    <h1>ToDoList 🏖️</h1>

    <div class="mode_changer">
        <a href="/">Free Time 🏖️</a>
        <a href="/work">Work 💼</a>
    </div>

    <p class="date">
        <%= completedDate %>
    </p>

    <form action="/submitForFreeTime" method="POST">
        <input type="text" name="taskToDo" class="text_input" placeholder="Write down what To Do...">
        <input type="submit" class="button_input" value="+">
    </form>

    <div class="task_layout">
        <% if(locals.inputedTaskFreeTime){ %>
            <% inputedTaskFreeTime.forEach((task)=> {%>
                <li>
                    <input type="checkbox" class="checkbox_style"><label>
                        <%= task %>
                    </label>
                </li>
                <% })}%>
    </div>
    <p class="motivation_quote">“Your success will be in direct proportion to how you spend your "free" time.”</p>

    </main>
    </body>

    </html>